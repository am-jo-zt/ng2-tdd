{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "dist/dev"
  },
  "exclude": [
    "node_modules",
    "dist",
    "gulpfile.ts",
    "typings/main.d.ts",
    "typings/main"
  ],
  "compileOnSave": false
}
